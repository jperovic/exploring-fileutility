<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="exploring_filemanager_class">Exploring\FileUtilityBundle\Service\File\FileManager</parameter>
        <parameter key="exploring_imageprocessor_class">Exploring\FileUtilityBundle\Service\Image\ImageProcessor</parameter>
        <parameter key="exploring_imageengine_gd_class">Exploring\FileUtilityBundle\Service\Image\GDImageEngine</parameter>
        <parameter key="exploring_imageengine_imagick_class">Exploring\FileUtilityBundle\Service\Image\ImagickImageEngine</parameter>
    </parameters>

    <services>
        <service id="exploring.filemanager" class="%exploring_filemanager_class%">
            <argument type="string">%exploring_file_utility.directories%</argument>
            <argument type="string">%exploring_file_utility.upload_root%</argument>
        </service>

        <service id="exploring.imageprocessor" class="%exploring_imageprocessor_class%" factory-class="%exploring_imageprocessor_class%" factory-method="get">
            <argument type="string">%exploring_file_utility.image_engine%</argument>
            <argument type="service" id="exploring.filemanager"/>
        </service>

        <service id="exploring.imageengine.gd" class="%exploring_imageengine_gd_class%">
            <argument type="service" id="exploring.filemanager"/>
        </service>

        <service id="exploring.imageengine.imagick" class="%exploring_imageengine_imagick_class%">
            <argument type="service" id="exploring.filemanager"/>
        </service>
    </services>

</container>
